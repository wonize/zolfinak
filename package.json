{
  "name": "saloni",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test.e2e": "cypress run",
    "test.unit": "vitest",
    "lint": "npm run eslint && npm run prettier -- --check",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write",
    "prettier": "prettier \"**/*.{ts,tsx}\"",
    "eslint": "eslint . --ext .ts,.tsx",
    "androids": "ionic capacitor run android",
    "android.list": "ionic capacitor run android --list",
    "android.prebuild": "ionic build && npx cap sync && npx cap copy",
    "android.start": "npm run android.prebuild && npx cap run android --external"
  },
  "dependencies": {
    "@capacitor/android": "^5.7.0",
    "@capacitor/app": "5.0.6",
    "@capacitor/core": "^5.7.0",
    "@capacitor/device": "^5.0.7",
    "@capacitor/haptics": "5.0.6",
    "@capacitor/keyboard": "5.0.7",
    "@capacitor/preferences": "^5.0.7",
    "@capacitor/splash-screen": "^5.0.7",
    "@capacitor/status-bar": "5.0.6",
    "@capacitor/toast": "^5.0.7",
    "@ionic/pwa-elements": "^3.2.2",
    "@ionic/react": "^7.7.0",
    "@ionic/react-router": "^7.7.0",
    "@ionic/storage": "^4.0.0",
    "date-fns": "^3.3.1",
    "i18next": "^23.8.2",
    "ionicons": "^7.2.2",
    "native-run": "^2.0.1",
    "pullstate": "^1.25.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^14.0.3",
    "react-router": "^5.3.4",
    "react-router-dom": "^5.3.4",
    "styled-components": "^6.1.8"
  },
  "devDependencies": {
    "@capacitor/assets": "^3.0.4",
    "@capacitor/cli": "^5.7.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^4.0.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.2.53",
    "@types/react-dom": "^18.2.18",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@vitejs/plugin-legacy": "^5.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cypress": "^13.6.4",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "prettier": "^3.2.5",
    "terser": "^5.27.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^0.34.6"
  },
  "description": "An Ionic project",
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier",
      "@ionic/eslint-config/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "parserOptions": {
      "project": [
        "./tsconfig.json",
        "./tsconfig.node.json"
      ]
    },
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "@typescript-eslint/prefer-readonly": "error",
      "@typescript-eslint/no-explicit-any": [
        "error",
        {
          "ignoreRestArgs": true
        }
      ],
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array-simple",
          "readonly": "array-simple"
        }
      ],
      "@typescript-eslint/consistent-generic-constructors": "error",
      "@typescript-eslint/adjacent-overload-signatures": "warn",
      "@typescript-eslint/unified-signatures": [
        "warn",
        {
          "ignoreDifferentlyNamedParameters": true
        }
      ],
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "prefer": "type-imports",
          "fixStyle": "inline-type-imports"
        }
      ],
      "import/newline-after-import": "error",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "never"
        }
      ]
    },
    "ignorePatterns": [
      "node_modules",
      "*.config.ts",
      "*.test.ts",
      "*.d.ts",
      "setupTests.ts",
      "cypress/**/*.*",
      "tests/**/*.*",
      "test/**/*.*",
      "**/*.jsx",
      "**/*.js"
    ]
  },
  "prettier": "@ionic/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "volta": {
    "node": "20.11.0",
    "npm": "10.3.0"
  }
}
